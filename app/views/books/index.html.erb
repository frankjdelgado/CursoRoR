	<div class="row">
		<div class="col-md-12">
			
			<h3 class="page-header">Books</h3>
			<br>

			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Title</th>
						<th>Author</th>
						<th>Publish Date</th>
						<th>Page Count</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>	
				</thead>
				<tbody>

					<% @books.each_with_index do |book,i| %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= book.title %></td>
							<td><%= book.author %></td>
							<td><%= book.publish_date %></td>
							<td><%= book.page_count %></td>
							<td><%= link_to "show", book_path(book)%></td>
							<td><%= link_to "edit", edit_book_path(book) %></td>
							<td><%= link_to "delete", book_path(book), method: :delete, data: {confirm: "Are you sure?"}, class: 'text-danger' %></td>
						</tr>
				 	<% end %>

				</tbody>
			</table>

			<div class="text-right">
				<%= link_to "Add Book", new_book_path, class: 'btn btn-info' %>
			</div>
			
		</div>
	</div>

