	<div class="row">
		<div class="col-md-12">
			
			<h3 class="page-header">Users</h3>
			<br>

			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th>Birthday</th>
						<th>Created At</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>	
				</thead>
				<tbody>

					<% @users.each_with_index do |user,i| %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= user.name %></td>
							<td><%= user.last_name %></td>
							<td><%= user.email %></td>
							<td><%= user.birthday %></td>
							<td><%= user.created_at %></td>
							<td><%= link_to "edit", edit_user_path(user) %></td>
							<td><%= link_to "delete", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: 'text-danger' %></td>
							<td><%= link_to "view profile", profile_user_path(user), class: 'text-success', target: '_blank' %></td>
						</tr>
				 	<% end %>

				</tbody>
			</table>

			<div class="text-right">
				<%= link_to "Create User", new_user_path, class: 'btn btn-info' %>
			</div>
			
		</div>
	</div>

