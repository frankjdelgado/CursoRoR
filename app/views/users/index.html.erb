<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h3>Users</h3>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th>Birthday</th>
						<th>Created At</th>
					</tr>	
				</thead>
				<tbody>

					<% @users.each_with_index do |user,i| %>
						<tr>
							<td><%= i %></td>
							<td><%= user.name %></td>
							<td><%= user.name %></td>
							<td><%= user.last_name %></td>
							<td><%= user.email %></td>
							<td><%= user.birthday %></td>
							<td><%= user.created_at %></td>
						</tr>
				 	<% end %>

				</tbody>
			</table>

		</div>
	</div>
</div>
